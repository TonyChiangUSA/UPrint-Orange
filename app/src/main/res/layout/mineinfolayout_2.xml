<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/pc_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@color/theme_color_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@color/theme_color_background"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="@string/nick"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/managerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/divider1"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/nocontent"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/divider11"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/managerName"
                android:layout_marginTop="8dp"
                android:background="#66000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/divider11"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="@string/qq"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/QQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/divider11"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/nocontent"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/QQ"
                android:layout_marginTop="8dp"
                android:background="#66000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/divider2"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="@string/sex"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/divider2"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/nocontent"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/divider22"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/sex"
                android:layout_marginTop="8dp"
                android:background="#66000000" />

            <TextView
                android:id="@+id/managershop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/divider22"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/shop_id"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/managerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/divider22"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/nocontent"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/managerId"
                android:layout_marginTop="8dp"
                android:background="#66000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/divider3"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/email"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/divider3"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/nocontent"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/divider33"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/email"
                android:layout_marginTop="8dp"
                android:background="#66000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/divider33"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/alipay"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/divider33"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/nocontent"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/divider333"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/alipay"
                android:layout_marginTop="8dp"
                android:background="#66000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/divider333"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/buildings"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/buildingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/divider333"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/nocontent"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/buildingName"
                android:layout_marginTop="8dp"
                android:background="#66000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/divider4"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/graduatedyear"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/graduated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/divider4"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/nocontent"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/divider44"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/graduated"
                android:layout_marginTop="8dp"
                android:background="#66000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/divider44"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/dormname"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dorm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/divider44"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/nocontent"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/dorm"
                android:layout_marginTop="8dp"
                android:background="#66000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/divider5"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/idnum"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/idcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/divider5"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/nocontent"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/idcard"
                android:layout_marginTop="8dp"
                android:background="#66000000" />

            <com.dd.processbutton.FlatButton
                android:id="@+id/changeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider7"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="40dp"
                android:onClick="changeInfo"
                android:text="@string/changeinfo"
                android:textColor="@color/theme_color_text"
                custom:pb_colorNormal="@color/theme_color_accent"
                custom:pb_colorPressed="@color/theme_color_primary_dark" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>