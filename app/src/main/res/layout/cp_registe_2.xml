<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/pc_toolbar" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/newpaswd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="@string/new_paswd"
        android:inputType="textPassword"
        app:met_clearButton="true"
        app:met_floatingLabel="normal"
        app:met_primaryColor="#00BCD4"
        app:met_textColor="#000" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/comfirm_paswd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/newpaswd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/comfirm_paswd"
        android:inputType="textPassword"
        app:met_clearButton="true"
        app:met_floatingLabel="normal"
        app:met_primaryColor="#00BCD4"
        app:met_textColor="#000" />

    <com.dd.processbutton.FlatButton
        android:id="@+id/registe"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comfirm_paswd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="routes"
        custom:pb_colorNormal="@android:color/holo_blue_light"
        custom:pb_colorPressed="@android:color/holo_blue_dark" />
</RelativeLayout>