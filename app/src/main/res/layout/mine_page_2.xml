<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color_background"
    android:gravity="center_horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/text_self_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/self_info"
        android:textColor="@color/theme_color_primary"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/layout_self_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_self_info"
        android:layout_marginTop="10dp"
        android:background="@color/theme_color_background"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/mineIfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:paddingTop="10dp"
            android:text="@string/mine"
            android:textColor="@color/theme_color_primary_text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/mineIfo"
            android:background="@color/theme_color_divider_text" />

        <TextView
            android:id="@+id/totalOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:paddingTop="10dp"
            android:text="@string/totalorder"
            android:textColor="@color/theme_color_primary_text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/totalOrders"
            android:background="@color/theme_color_divider_text" />

        <TextView
            android:id="@+id/complains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:paddingTop="10dp"
            android:text="@string/complains"
            android:textColor="@color/theme_color_primary_text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/divider11"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/complains"
            android:background="@color/theme_color_divider_text" />

        <TextView
            android:id="@+id/forgetPaswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider11"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:paddingTop="10dp"
            android:text="@string/forgetpasword"
            android:textColor="@color/theme_color_primary_text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/forgetPaswd"
            android:background="@color/theme_color_divider_text" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_self_info"
        android:layout_marginTop="32dp"
        android:text="@string/others"
        android:textColor="@color/theme_color_primary"
        android:textSize="14sp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_others"
        android:layout_marginTop="10dp"
        android:background="@color/theme_color_background"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/unresigned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:paddingTop="10dp"
            android:text="@string/unresigned"
            android:textColor="@color/theme_color_primary_text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/unresigned"
            android:background="@color/theme_color_divider_text" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider3"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:paddingTop="10dp"
            android:text="@string/logout"
            android:textColor="@color/theme_color_primary_text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/logout"
            android:background="@color/theme_color_divider_text" />
    </RelativeLayout>
</RelativeLayout>